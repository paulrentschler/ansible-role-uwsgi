[uwsgi]

# try to autoload appropriate plugin if "unknown" option has been specified
autoload = {{ uwsgi_autoload }}

# enable master process manager
master = {{ uwsgi_master }}

# spawn uWSGI emperor worker processes
workers = {{ uwsgi_workers }}

# automatically kill workers on master's death
no-orphans = {{ uwsgi_no_orphans }}

# place timestamps into log
log-date = {{ uwsgi_log_date }}

# user identifier of uWSGI processes
uid = {{ uwsgi_user }}

# group identifier of uWSGI processes
gid = {{ uwsgi_group }}

# vassals directory
emperor = {{ uwsgi_apps_path }}

# trigger chain reload if the app config file is modified/touched
touch-chain-reload = "{{ uwsgi_touch_chain_reload }}"

# enable strict mode (placeholder cannot be used)
strict = true

# specify the log file location
logto = {{ uwsgi_log_path }}

# log file permissions
logfile-chmod = 660

